<config>
  <databases>
    <database name="ink_sanguo"/>
    <database name="common"/>
  </databases>
  <tables>
    <table name="hero">
      <fields>
        <field name="uid">
          <type>uint64</type>
          <auto_increase>0</auto_increase>
        </field>
        <field name="id">
          <type>uint16</type>
        </field>
        <field name="name">
          <type>varchar(64)</type>
        </field>
        <field name="level">
          <type>uint16</type>
          <default>1</default>
        </field>
        <field name="exp">
          <type>uint32</type>
          <default>0</default>
        </field>
        <field name="strength">
          <type>uint8</type>
        </field>
        <field name="intelligence">
          <type>uint8</type>
        </field>
      </fields>
      <keys>
        <key>uid</key>
      </keys>
    </table>
  </tables>
</config>
